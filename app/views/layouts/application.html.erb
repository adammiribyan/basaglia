<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= [controller_name, action_name].join(" ") %>">
  <div class="container">
    <header class="header">
      <nav class="pages">
        <ul>
          <% %w(trainings publications contact-us feedback).each do |page_name| %>
            <li class="<%= page_name %> <%= "selected" if params[:id] == page_name %>"><%= link_to t("pages.#{page_name}.title"), page_path(page_name) %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <section class="main">
      <%= yield %>
    </section>
  </div>

</body>
</html>
